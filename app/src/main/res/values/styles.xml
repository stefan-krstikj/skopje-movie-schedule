<resources>

    <!-- Base application theme. -->

    <style name="Base.Theme.SkopjeMovieSchedule" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/movies_blue_800</item>
        <item name="colorPrimaryDark">@color/movies_blue_800_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:titleTextColor">@android:color/white</item>
        <item name="subtitleTextColor">@android:color/white</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:colorBackground">@color/movies_blue_background</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Theme.SkopjeMovieSchedule" parent="Base.Theme.SkopjeMovieSchedule" />

    <style name="Theme.SkopjeMovieSchedule.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="android:background">@color/movies_blue_800_dark</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="TabLayoutTheme" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/movies_blue_800_dark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="tabTextColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="MovieCardTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/movies_blue_background</item>
    </style>

    <style name="MovieTheaterTheme">
        <item name="android:background">@color/movies_item_color</item>
        <item name="android:color">@android:color/black</item>
    </style>

    <style name="TextCategoryTitle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextCategorySubtitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ToolbarTextTitle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="SigninHeadlineTheme">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">sans-serif</item>

    </style>

